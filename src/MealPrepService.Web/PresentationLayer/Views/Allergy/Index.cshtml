@model AllergyListViewModel
@{
    ViewData["Title"] = "Allergy Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-exclamation-triangle-fill text-danger"></i>
            Allergy Management
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Allergy
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" id="searchForm" class="row g-3">
                <div class="col-12">
                    <label for="searchTerm" class="form-label">Search Allergies</label>
                    <div class="input-group">
                        <input type="text" class="form-control form-control-lg" id="searchTerm" name="searchTerm" 
                               value="@Model.SearchTerm" placeholder="Search by allergy name..." autofocus>
                        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                        {
                            <button type="button" class="btn btn-outline-secondary" id="clearInputBtn" title="Clear search input">
                                <i class="bi bi-x-circle"></i>
                            </button>
                        }
                    </div>
                </div>
                <div class="col-12">
                    <a asp-action="Index" asp-route-showAll="true" class="btn btn-success">
                        <i class="bi bi-list-ul"></i> Show All Allergies
                    </a>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.ShowAll)
                    {
                        <button type="button" class="btn btn-secondary" id="clearAllBtn">
                            <i class="bi bi-x-circle"></i> Clear
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchTerm');
            const searchForm = document.getElementById('searchForm');
            const clearInputBtn = document.getElementById('clearInputBtn');
            const clearAllBtn = document.getElementById('clearAllBtn');
            let searchTimeout;

            // Auto-submit on input with debounce
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    searchForm.submit();
                }, 500); // Wait 500ms after user stops typing
            });

            // Clear input button functionality (inline X button)
            if (clearInputBtn) {
                clearInputBtn.addEventListener('click', function() {
                    searchInput.value = '';
                    searchForm.submit();
                });
            }

            // Clear all button functionality (clears everything and exits show all)
            if (clearAllBtn) {
                clearAllBtn.addEventListener('click', function() {
                    window.location.href = '@Url.Action("Index")';
                });
            }
        });
    </script>

    <!-- Allergies List -->
    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.ShowAll)
    {
        @if (Model.HasAllergies)
        {
            @if (Model.ShowAll)
            {
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle me-2"></i>
                    Showing all <strong>@Model.TotalAllergies</strong> allergy@(Model.TotalAllergies != 1 ? "ies" : "y")
                </div>
            }
            else
            {
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle me-2"></i>
                    Found <strong>@Model.TotalAllergies</strong> allergy@(Model.TotalAllergies != 1 ? "ies" : "y") matching "@Model.SearchTerm"
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-white" style="background-color: transparent;">Allergy Name</th>
                                    <th  class="text-end text-white" style="background-color: transparent;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var allergy in Model.Allergies)
                                {
                                    <tr>
                                        <td class="text-white" style="background-color: transparent;">
                                            <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                                            <strong>@allergy.AllergyName</strong>
                                        </td>
                                        <td class="text-end">
                                            <div class="action-buttons">
                                                <a asp-action="Edit" asp-route-id="@allergy.Id" 
                                                   class="btn btn-sm btn-action btn-action-edit" title="Edit">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@allergy.Id" 
                                                   class="btn btn-sm btn-action btn-action-delete" title="Delete">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: #ffc107;"></i>
                    <h4 class="mt-3">No Allergies Found</h4>
                    <p class="text-muted">No allergies found matching "<strong>@Model.SearchTerm</strong>". Try a different search term.</p>
                    <a asp-action="Index" class="btn btn-primary mt-2">
                        <i class="bi bi-arrow-clockwise"></i> Clear Search
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">Search for Allergies</h4>
                <p class="text-muted">Enter an allergy name in the search box above to find allergies.</p>
                <p class="text-muted">Or create a new allergy to get started.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create New Allergy
                </a>
            </div>
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-showAll="@Model.ShowAll"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-searchTerm="@Model.SearchTerm" 
                               asp-route-showAll="@Model.ShowAll"
                               asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }
                    else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }
                
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-showAll="@Model.ShowAll"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) of @Model.TotalItems allergies
            </p>
        </nav>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
