@model MealPrepService.Web.PresentationLayer.ViewModels.DailyMenuViewModel

@{
    ViewData["Title"] = "Menu Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">Menu for @Model.MenuDate.ToString("dddd, MMMM dd, yyyy")</h4>
                    <small class="text-muted">Status: 
                        @if (Model.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge bg-secondary">Draft</span>
                        }
                        else if (Model.Status.Equals("active", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Status.Equals("inactive", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@Model.Status</span>
                        }
                    </small>
                </div>
                <div>
                    @if (Model.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                    {
                        <a asp-action="AddMeal" asp-route-menuId="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Meal
                        </a>
                        <form asp-action="Publish" asp-route-menuId="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to publish this menu? You won\'t be able to edit it after publishing.')">
                                <i class="bi bi-check-circle"></i> Publish Menu
                            </button>
                        </form>
                    }
                    else if (Model.Status.Equals("active", StringComparison.OrdinalIgnoreCase))
                    {
                        <form asp-action="Deactivate" asp-route-menuId="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to deactivate this menu? It will no longer appear in public menus.')">
                                <i class="bi bi-x-circle"></i> Deactivate Menu
                            </button>
                        </form>
                    }
                    else if (Model.Status.Equals("inactive", StringComparison.OrdinalIgnoreCase))
                    {
                        <form asp-action="Reactivate" asp-route-menuId="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to reactivate this menu? It will appear in public menus again.')">
                                <i class="bi bi-arrow-clockwise"></i> Reactivate Menu
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.MenuMeals.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Recipe Name</th>
                                <th>Price</th>
                                <th>Available Quantity</th>
                                <th>Status</th>
                                <th>Nutrition</th>
                                @if (Model.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                {
                                    <th>Actions</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var meal in Model.MenuMeals)
                            {
                                <tr>
                                    <td>
                                        <strong>@meal.RecipeName</strong>
                                        @if (meal.Recipe != null && !string.IsNullOrEmpty(meal.Recipe.Instructions))
                                        {
                                            <br />
                                            <small class="text-muted recipe-instructions-preview">
                                                @{
                                                    var truncatedInstructions = meal.Recipe.Instructions.Length > 100 
                                                        ? meal.Recipe.Instructions.Substring(0, 100) + "..." 
                                                        : meal.Recipe.Instructions;
                                                }
                                                @Html.Raw(truncatedInstructions
                                                    .Replace("&#xA;", "<br>")
                                                    .Replace("&#10;", "<br>")
                                                    .Replace("\\n", "<br>")
                                                    .Replace("\n", "<br>")
                                                    .Replace("\r\n", "<br>")
                                                    .Replace("\r", "<br>"))
                                            </small>
                                        }
                                    </td>
                                    <td>$@meal.Price.ToString("F2")</td>
                                    <td>
                                        @if (meal.IsSoldOut)
                                        {
                                            <span class="badge bg-danger">Sold Out</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@meal.AvailableQuantity</span>
                                        }
                                    </td>
                                    <td>
                                        @if (meal.IsSoldOut)
                                        {
                                            <span class="badge bg-danger">Sold Out</span>
                                        }
                                        else if (meal.AvailableQuantity < 10)
                                        {
                                            <span class="badge bg-warning">Low Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                    </td>
                                    <td>
                                        @if (meal.Recipe != null)
                                        {
                                            <small>
                                                <strong>@meal.Recipe.TotalCalories.ToString("F0")</strong> kcal<br />
                                                P: @meal.Recipe.ProteinG.ToString("F1")g | 
                                                F: @meal.Recipe.FatG.ToString("F1")g | 
                                                C: @meal.Recipe.CarbsG.ToString("F1")g
                                            </small>
                                        }
                                    </td>
                                    @if (Model.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <td>
                                            <a asp-action="UpdateQuantity" asp-route-menuMealId="@meal.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Update Qty
                                            </a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Total Meals</h6>
                                    <h3>@Model.MenuMeals.Count</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Total Available</h6>
                                    <h3>@Model.MenuMeals.Sum(m => m.AvailableQuantity)</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Avg Price</h6>
                                    <h3>$@Model.MenuMeals.Average(m => m.Price).ToString("F2")</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No meals have been added to this menu yet.
                    @if (Model.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                    {
                        <a asp-action="AddMeal" asp-route-menuId="@Model.Id" class="alert-link">Add your first meal</a>
                    }
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Menu List
        </a>
    </div>
</div>
