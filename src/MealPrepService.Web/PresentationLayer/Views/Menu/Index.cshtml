@model List<MealPrepService.Web.PresentationLayer.ViewModels.DailyMenuViewModel>

@{
    ViewData["Title"] = "Menu Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Menu Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Menu
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Menus for Next 30 Days</h5>
            <small class="text-muted">@ViewBag.StartDate.ToString("MMM dd, yyyy") - @ViewBag.EndDate.ToString("MMM dd, yyyy")</small>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Day</th>
                                <th>Status</th>
                                <th>Meals Count</th>
                                <th>Total Available</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var menu in Model)
                            {
                                <tr>
                                    <td>@menu.MenuDate.ToString("MMM dd, yyyy")</td>
                                    <td>@menu.MenuDate.ToString("dddd")</td>
                                    <td>
                                        @if (menu.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-secondary">Draft</span>
                                        }
                                        else if (menu.Status.Equals("active", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@menu.Status</span>
                                        }
                                    </td>
                                    <td>@menu.MenuMeals.Count</td>
                                    <td>@menu.MenuMeals.Sum(m => m.AvailableQuantity)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@menu.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (menu.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a asp-action="AddMeal" asp-route-menuId="@menu.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-plus"></i> Add Meal
                                            </a>
                                            <form asp-action="Publish" asp-route-menuId="@menu.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to publish this menu?')">
                                                    <i class="bi bi-check-circle"></i> Publish
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No menus found for the next 30 days. Create a new menu to get started.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
