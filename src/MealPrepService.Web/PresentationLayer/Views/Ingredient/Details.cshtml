@model IngredientViewModel
@{
    ViewData["Title"] = "Ingredient Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-egg me-2"></i>
                        Ingredient Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h3 class="text-primary">
                                @Model.IngredientName
                                @if (Model.IsAllergen)
                                {
                                    <span class="badge bg-danger ms-2">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                        Allergen
                                    </span>
                                }
                            </h3>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Unit of Measurement</label>
                            <div class="fs-5">
                                <i class="bi bi-rulers me-2 text-primary"></i>
                                @Model.Unit
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Calories per Unit</label>
                            <div class="fs-5">
                                <i class="bi bi-fire me-2 text-danger"></i>
                                @Model.CaloPerUnit.ToString("F1") cal
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Allergen Status</label>
                            <div class="fs-5">
                                @if (Model.IsAllergen)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                        Yes - This is an allergen
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill me-1"></i>
                                        No - Safe ingredient
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Associated Allergies</label>
                            <div class="fs-5">
                                @if (Model.Allergies != null && Model.Allergies.Any())
                                {
                                    @foreach (var allergy in Model.Allergies)
                                    {
                                        <span class="badge bg-danger me-1 mb-1">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                            @allergy.AllergyName
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Nutrition Information:</strong> This ingredient contains @Model.CaloPerUnit.ToString("F1") calories per @Model.Unit.
                    </div>

                    @if (Model.IsAllergen)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Allergen Warning:</strong> This ingredient is marked as an allergen and may cause allergic reactions in sensitive individuals.
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil me-2"></i>
                                Edit
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="bi bi-trash me-2"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.IngredientName</strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. Ingredients used in recipes cannot be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>
                        Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
