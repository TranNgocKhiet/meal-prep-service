@model MealPrepService.Web.PresentationLayer.ViewModels.IngredientListViewModel

@{
    ViewData["Title"] = "Ingredients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-egg"></i> Ingredient Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Ingredient
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.ShowAll)
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h3>@Model.TotalIngredients</h3>
                        <p class="mb-0">Total Ingredients</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h3>@Model.AllergenCount</h3>
                        <p class="mb-0">Allergens (@Model.AllergenPercentage)</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@Model.SafeIngredientCount</h3>
                        <p class="mb-0">Safe Ingredients</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-12">
                    <label for="searchTerm" class="form-label">Search Ingredients</label>
                    <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                           value="@Model.SearchTerm" placeholder="Search by name or unit..." autofocus>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                    <a asp-action="Index" asp-route-showAll="true" class="btn btn-success">
                        <i class="bi bi-list-ul"></i> Show All
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Ingredients Table -->
    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.ShowAll)
    {
        @if (Model.HasIngredients)
        {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ingredient Name</th>
                                <th>Unit</th>
                                <th>Calories per Unit</th>
                                <th>Allergy Name</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <tr>
                                    <td>
                                        <strong>@ingredient.IngredientName</strong>
                                        @if (ingredient.IsAllergen)
                                        {
                                            <i class="bi bi-exclamation-triangle-fill text-danger ms-1" 
                                               title="Allergen"></i>
                                        }
                                    </td>
                                    <td>@ingredient.Unit</td>
                                    <td>@ingredient.CaloPerUnit.ToString("F1") cal</td>
                                    <td>
                                        @if (ingredient.Allergies != null && ingredient.Allergies.Any())
                                        {
                                            @foreach (var allergy in ingredient.Allergies)
                                            {
                                                <span class="badge bg-danger me-1 mb-1">
                                                    <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                    @allergy.AllergyName
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="action-buttons">
                                            <a asp-action="Details" asp-route-id="@ingredient.Id" 
                                               class="btn btn-sm btn-action btn-action-view" title="View Details">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@ingredient.Id" 
                                               class="btn btn-sm btn-action btn-action-edit" title="Edit">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-action btn-action-delete" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal-@ingredient.Id"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@ingredient.Id" tabindex="-1" 
                                             aria-labelledby="deleteModalLabel-@ingredient.Id" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel-@ingredient.Id">
                                                            Confirm Delete
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" 
                                                                aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete <strong>@ingredient.IngredientName</strong>?
                                                        <br /><br />
                                                        <small class="text-muted">
                                                            This action cannot be undone. Ingredients used in recipes cannot be deleted.
                                                        </small>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <form asp-action="Delete" asp-route-id="@ingredient.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="bi bi-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: #ffc107;"></i>
                    <h4 class="mt-3">No Ingredients Found</h4>
                    <p class="text-muted">No ingredients found matching "<strong>@Model.SearchTerm</strong>". Try a different search term.</p>
                    <a asp-action="Index" class="btn btn-primary mt-2">
                        <i class="bi bi-arrow-clockwise"></i> Clear Search
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">Search for Ingredients</h4>
                <p class="text-muted">Enter an ingredient name or unit in the search box above to find ingredients.</p>
                <p class="text-muted">Or create a new ingredient to get started.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create New Ingredient
                </a>
            </div>
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-showAll="@Model.ShowAll"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-searchTerm="@Model.SearchTerm" 
                               asp-route-showAll="@Model.ShowAll"
                               asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }
                    else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                    {
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    }
                }
                
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-searchTerm="@Model.SearchTerm" 
                       asp-route-showAll="@Model.ShowAll"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
            <p class="text-center text-muted">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) of @Model.TotalItems ingredients
            </p>
        </nav>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
