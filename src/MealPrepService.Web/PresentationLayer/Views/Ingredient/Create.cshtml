@model MealPrepService.Web.PresentationLayer.ViewModels.CreateIngredientViewModel

@{
    ViewData["Title"] = "Create Ingredient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Ingredient</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IngredientName" class="form-label"></label>
                            <input asp-for="IngredientName" class="form-control" placeholder="e.g., Chicken Breast, Tomato, Olive Oil" />
                            <span asp-validation-for="IngredientName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Unit" class="form-label"></label>
                                <input asp-for="Unit" class="form-control" placeholder="e.g., g, ml, piece, cup" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Common units: g (grams), ml (milliliters), piece, cup, tbsp, tsp
                                </small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CaloPerUnit" class="form-label"></label>
                                <input asp-for="CaloPerUnit" class="form-control" type="number" step="0.1" 
                                       placeholder="e.g., 165.0" />
                                <span asp-validation-for="CaloPerUnit" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Calories per one unit of measurement
                                </small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsAllergen" class="form-check-input" type="checkbox" 
                                       id="isAllergenSwitch" />
                                <label class="form-check-label" for="isAllergenSwitch">
                                    <strong>Mark as Allergen</strong>
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                Check this if the ingredient is a common allergen (e.g., peanuts, shellfish, dairy, eggs)
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Tip:</strong> Ingredients marked as allergens will be excluded from meal plans 
                            for customers with matching allergies.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Ingredient
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Example Ingredients Card -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-lightbulb"></i> Example Ingredients</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Proteins</h6>
                            <ul class="small">
                                <li>Chicken Breast - 165 cal/100g</li>
                                <li>Salmon - 208 cal/100g</li>
                                <li>Eggs - 155 cal/100g <span class="badge bg-danger">Allergen</span></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Vegetables</h6>
                            <ul class="small">
                                <li>Broccoli - 34 cal/100g</li>
                                <li>Tomato - 18 cal/100g</li>
                                <li>Spinach - 23 cal/100g</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
