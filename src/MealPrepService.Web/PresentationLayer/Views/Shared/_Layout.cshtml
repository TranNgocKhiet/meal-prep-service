<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meal Prep Service</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-black text-white d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            

            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <strong>Meal Prep Service</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PublicMenu" asp-action="Today">Today's Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PublicMenu" asp-action="Weekly">Weekly Menu</a>
                        </li>
                        
                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HealthProfile" asp-action="Index">Health Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="MealPlan" asp-action="Index">My Meal Plans</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Fridge" asp-action="Index">My Fridge</a>
                            </li>
                            @* My Orders removed - deferred to Checkpoint 2 *@
                        }
                        
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Menu" asp-action="Index">Menus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Recipe" asp-action="Index">Recipes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Ingredient" asp-action="Index">Ingredients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Allergy" asp-action="Index">Allergies</a>
                            </li>
                        }
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    System Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="StaffAccounts">
                                        <i class="fas fa-users-cog me-2"></i>Staff Accounts
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Revenue">
                                        <i class="bi bi-graph-up me-2"></i>Revenue Reports
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="SystemConfiguration">
                                        <i class="bi bi-gear me-2"></i>System Configuration
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Menu" asp-action="Index">
                                        <i class="bi bi-calendar-week me-2"></i>Manage Menus
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Recipe" asp-action="Index">
                                        <i class="bi bi-book me-2"></i>Manage Recipes
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Ingredient" asp-action="Index">
                                        <i class="bi bi-egg me-2"></i>Manage Ingredients
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Allergy" asp-action="Index">
                                        <i class="bi bi-exclamation-triangle me-2"></i>Manage Allergies
                                    </a></li>
                                </ul>
                            </li>
                        }
                        
                        @if (User.IsInRole("DeliveryMan"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Delivery" asp-action="AssignedDeliveries">My Deliveries</a>
                            </li>
                        }
                    </ul>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto"
            style="background-color:#22B14C; color:white;">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    © 2026 - Meal Prep Service
                </div>
                <div class="col-md-6 text-end">
                    <a asp-controller="Home"
                       asp-action="Privacy"
                       class="text-white text-decoration-none">
                        Privacy Policy
                    </a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
