@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('fridgeSearch');
            const clearButton = document.getElementById('clearSearch');
            const searchResults = document.getElementById('searchResults');
            const fridgeTable = document.getElementById('fridgeTable');
            
            if (!searchInput || !fridgeTable) return;
            
            const tableRows = fridgeTable.querySelectorAll('tbody tr');
            const totalRows = tableRows.length;
            
            function filterTable() {
                const searchTerm = searchInput.value.toLowerCase().trim();
                let visibleCount = 0;
                
                tableRows.forEach(function(row) {
                    const ingredientCell = row.querySelector('td:first-child strong');
                    if (!ingredientCell) return;
                    
                    const ingredientName = ingredientCell.textContent.toLowerCase();
                    
                    if (ingredientName.includes(searchTerm)) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });
                
                // Update search results text
                if (searchTerm) {
                    if (visibleCount === 0) {
                        searchResults.textContent = 'No ingredients found matching "' + searchInput.value + '"';
                        searchResults.classList.add('text-danger');
                        searchResults.classList.remove('text-muted');
                    } else if (visibleCount === totalRows) {
                        searchResults.textContent = 'Showing all ' + totalRows + ' ingredients';
                        searchResults.classList.remove('text-danger');
                        searchResults.classList.add('text-muted');
                    } else {
                        searchResults.textContent = 'Showing ' + visibleCount + ' of ' + totalRows + ' ingredients';
                        searchResults.classList.remove('text-danger');
                        searchResults.classList.add('text-muted');
                    }
                    clearButton.style.display = 'block';
                } else {
                    searchResults.textContent = '';
                    clearButton.style.display = 'none';
                }
            }
            
            // Search as user types
            searchInput.addEventListener('input', filterTable);
            
            // Clear search
            clearButton.addEventListener('click', function() {
                searchInput.value = '';
                filterTable();
                searchInput.focus();
            });
            
            // Hide clear button initially
            clearButton.style.display = 'none';
        });
    </script>
}

