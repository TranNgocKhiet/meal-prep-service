@model MealPrepService.Web.PresentationLayer.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">Order Details</h4>
                    <small class="text-muted">Order #@Model.Id.ToString().Substring(0, 8)</small>
                </div>
                <div>
                    @if (Model.Status.Equals("pending", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                    else if (Model.Status.Equals("pending_payment", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-info">Pending Payment</span>
                    }
                    else if (Model.Status.Equals("confirmed", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-success">Confirmed</span>
                    }
                    else if (Model.Status.Equals("delivered", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-primary">Delivered</span>
                    }
                    else if (Model.Status.Equals("payment_failed", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="badge bg-danger">Payment Failed</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Status</span>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Order Information</h6>
                            <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                            <p class="mb-1"><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                            <p class="mb-0"><strong>Status:</strong> @Model.Status</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Order Total</h6>
                            <h3 class="text-primary">$@Model.TotalAmount.ToString("F2")</h3>
                            <p class="mb-0 text-muted">@Model.OrderDetails.Sum(d => d.Quantity) items</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Status.Equals("pending_payment", StringComparison.OrdinalIgnoreCase) && 
                 Model.PaymentMethod.Equals("COD", StringComparison.OrdinalIgnoreCase))
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    <strong>Cash on Delivery:</strong> Payment will be confirmed by the delivery person upon delivery.
                </div>
            }

            @if (Model.Status.Equals("payment_failed", StringComparison.OrdinalIgnoreCase))
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Payment Failed:</strong> Your payment could not be processed. Please try again.
                    <form asp-action="Retry" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-warning ms-2">
                            <i class="bi bi-arrow-clockwise"></i> Retry Payment
                        </button>
                    </form>
                </div>
            }

            <h5 class="mb-3">Order Items</h5>
            <div class="table-responsive mb-4">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    <strong>@detail.RecipeName</strong>
                                    @if (detail.Recipe != null)
                                    {
                                        <br />
                                        <small class="text-muted">
                                            @detail.Recipe.TotalCalories.ToString("F0") kcal | 
                                            P: @detail.Recipe.ProteinG.ToString("F1")g | 
                                            F: @detail.Recipe.FatG.ToString("F1")g | 
                                            C: @detail.Recipe.CarbsG.ToString("F1")g
                                        </small>
                                    }
                                </td>
                                <td>@detail.Quantity</td>
                                <td>$@detail.UnitPrice.ToString("F2")</td>
                                <td>$@((detail.Quantity * detail.UnitPrice).ToString("F2"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th>$@Model.TotalAmount.ToString("F2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            @if (Model.DeliveryInfo != null)
            {
                <h5 class="mb-3">Delivery Information</h5>
                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Delivery Time:</strong></p>
                                <p>@Model.DeliveryInfo.DeliveryTime.ToString("MMM dd, yyyy hh:mm tt")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Delivery Address:</strong></p>
                                <p>@Model.DeliveryInfo.Address</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.DeliveryInfo.DriverContact))
                        {
                            <p class="mb-0"><strong>Driver Contact:</strong> @Model.DeliveryInfo.DriverContact</p>
                        }
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </a>
                @if (Model.Status.Equals("confirmed", StringComparison.OrdinalIgnoreCase) || 
                     Model.Status.Equals("pending_payment", StringComparison.OrdinalIgnoreCase))
                {
                    <a asp-controller="Delivery" asp-action="MyDeliveries" class="btn btn-info">
                        <i class="bi bi-truck"></i> Track Delivery
                    </a>
                }
            </div>
        </div>
    </div>
</div>
