@model HealthProfileViewModel
@{
    ViewData["Title"] = "My Health Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-heart-pulse me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                        <path d="M8.5 5.5a.5.5 0 0 0-1 0v1.518l-.5 1.5-1-3a.5.5 0 0 0-.95.316l1.5 4.5a.5.5 0 0 0 .95 0l.5-1.5.5 1.5a.5.5 0 0 0 .95 0l1.5-4.5a.5.5 0 1 0-.95-.316l-1 3-.5-1.5V5.5z"/>
                    </svg>
                    My Health Profile
                </h2>
                <a asp-action="Edit" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil me-2" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                    </svg>
                    Edit Profile
                </a>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4" style="background-color: #1e293b; border-color: rgba(34,197,94,.25);">
                        <div class="card-header text-white" style="background-color: #1e293b;">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body" style="background-color: #1e293b;">
                            <table class="table table-borderless bg-transparent mb-0">
                                <tbody>
                                    <tr>
                                        <th width="40%" class="text-white" style="background-color: transparent;">Age:</th>
                                        <td class="text-white" style="background-color: transparent;">@Model.Age years</td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: transparent;">Gender:</th>
                                        <td class="text-white" style="background-color: transparent;">@Model.Gender</td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: transparent;">Weight:</th>
                                        <td class="text-white" style="background-color: transparent;">@Model.Weight kg</td>
                                    </tr>
                                    <tr>
                                        <th class="text-white" style="background-color: transparent;">Height:</th>
                                        <td class="text-white" style="background-color: transparent;">@Model.Height cm</td>
                                    </tr>
                                    @if (Model.CalorieGoal.HasValue)
                                    {
                                        <tr>
                                            <th class="text-white" style="background-color: transparent;">Daily Calorie Goal:</th>
                                            <td style="background-color: transparent;"><strong class="text-primary">@Model.CalorieGoal.Value kcal</strong></td>
                                        </tr>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(Model.HealthNotes))
                                    {
                                        <tr>
                                            <th class="text-white" style="background-color: transparent;">Health Notes:</th>
                                            <td class="text-white" style="background-color: transparent;">@Model.HealthNotes</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4" style="background-color: #1e293b; border-color: rgba(34,197,94,.25);">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                                    <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
                                    <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
                                </svg>
                                Allergies
                            </h5>
                        </div>
                        <div class="card-body" style="background-color: #1e293b;">
                            @if (Model.CurrentAllergies?.Any() == true)
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var allergy in Model.CurrentAllergies)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            @allergy
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No allergies recorded</p>
                            }
                        </div>
                    </div>

                    <div class="card mb-4" style="background-color: #1e293b; border-color: rgba(34,197,94,.25);">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-slash-circle me-2" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M11.354 4.646a.5.5 0 0 0-.708 0l-6 6a.5.5 0 0 0 .708.708l6-6a.5.5 0 0 0 0-.708z"/>
                                </svg>
                                Dietary Restrictions
                            </h5>
                        </div>
                        <div class="card-body text-white" style="background-color: #1e293b;">
                            @if (!string.IsNullOrWhiteSpace(Model.DietaryRestrictions))
                            {
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.DietaryRestrictions</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No dietary restrictions recorded</p>
                            }
                        </div>
                    </div>

                    <div class="card mb-4" style="background-color: #1e293b; border-color: rgba(34,197,94,.25);">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart me-2" viewBox="0 0 16 16">
                                    <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                </svg>
                                Food Preferences
                            </h5>
                        </div>
                        <div class="card-body text-white" style="background-color: #1e293b;">
                            @if (!string.IsNullOrWhiteSpace(Model.FoodPreferences))
                            {
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.FoodPreferences</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No food preferences recorded</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
                <strong>Tip:</strong> Your health profile helps us generate personalized meal plans that match your dietary needs and preferences.
            </div>
        </div>
    </div>
</div>
