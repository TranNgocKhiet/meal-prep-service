@model MealPrepService.Web.PresentationLayer.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
        <div>
            <span class="text-muted">Last Updated: @Model.LastUpdated.ToString("MMM dd, yyyy hh:mm tt")</span>
            <button type="button" class="btn btn-outline-secondary btn-sm ms-2" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        @foreach (var card in Model.DashboardCards)
        {
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card border-@card.CssClass h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">@card.Title</h6>
                                <h3 class="mb-0 text-@card.CssClass">@card.Value</h3>
                                <small class="text-muted">@card.Description</small>
                            </div>
                            <div class="text-@card.CssClass" style="font-size: 2.5rem; opacity: 0.3;">
                                <i class="@card.Icon"></i>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(card.Trend))
                        {
                            <div class="mt-2">
                                <small class="@card.TrendCssClass">
                                    <i class="bi bi-arrow-up"></i> @card.Trend
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="StaffAccounts" class="btn btn-outline-primary">
                            <i class="fas fa-users-cog"></i> Manage Staff Accounts
                        </a>
                        <a asp-action="Revenue" class="btn btn-outline-primary">
                            <i class="bi bi-graph-up"></i> View Revenue Reports
                        </a>
                        <a asp-action="AIConfiguration" class="btn btn-outline-info">
                            <i class="bi bi-cpu"></i> AI Configuration
                        </a>
                        <form asp-action="GenerateMonthlyReport" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="year" value="@DateTime.Now.Year" />
                            <input type="hidden" name="month" value="@DateTime.Now.Month" />
                            <button type="submit" class="btn btn-outline-success w-100">
                                <i class="bi bi-file-earmark-text"></i> Generate Current Month Report
                            </button>
                        </form>
                        <hr class="my-2">
                        <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-calendar-week"></i> Manage Menus
                        </a>
                        <a asp-controller="Recipe" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-book"></i> Manage Recipes
                        </a>
                        <a asp-controller="Ingredient" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-egg"></i> Manage Ingredients
                        </a>
                        <a asp-controller="Allergy" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-exclamation-triangle"></i> Manage Allergies
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activities -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Activities</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <span class="@activity.CssClass">
                                                <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i>
                                            </span>
                                            <strong class="ms-2">@activity.Activity</strong>
                                        </div>
                                        <small class="text-muted">@activity.TimeAgo</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No recent activities</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> System Status</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Database</h6>
                                    <small class="text-success">Connected</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Payment Gateway</h6>
                                    <small class="text-success">Operational</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="me-3">
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 2rem;"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">AI Services</h6>
                                    <small class="text-success">Active</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Note about deferred features -->
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> 
        <strong>Note:</strong> Subscription-related statistics and features are deferred to Checkpoint 2. 
        Current dashboard shows order and customer data only.
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .list-group-item {
        border-left: none;
        border-right: none;
    }
    
    .list-group-item:first-child {
        border-top: none;
    }
    
    .list-group-item:last-child {
        border-bottom: none;
    }
</style>
