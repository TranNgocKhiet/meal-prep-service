@model CreateIngredientViewModel
@{
    ViewData["Title"] = "Create Ingredient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Create New Ingredient
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IngredientName" class="form-label"></label>
                            <input asp-for="IngredientName" class="form-control" placeholder="e.g., Chicken Breast, Olive Oil, Tomato" />
                            <span asp-validation-for="IngredientName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Unit" class="form-label"></label>
                                <input asp-for="Unit" class="form-control" placeholder="e.g., g, ml, piece, cup" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Common units: g, kg, ml, L, piece, cup, tbsp, tsp
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CaloPerUnit" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="CaloPerUnit" class="form-control" type="number" step="0.1" min="0" placeholder="0.0" />
                                    <span class="input-group-text">cal</span>
                                </div>
                                <span asp-validation-for="CaloPerUnit" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsAllergen" class="form-check-input" type="checkbox" role="switch" id="isAllergenSwitch" />
                                <label asp-for="IsAllergen" class="form-check-label" for="isAllergenSwitch">
                                    Mark as Allergen
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Check this if the ingredient is a common allergen (e.g., peanuts, dairy, shellfish, eggs)
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-lightbulb me-2"></i>
                            <strong>Tip:</strong> Make sure to enter accurate calorie information per unit for proper nutrition tracking.
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>
                                Create Ingredient
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
