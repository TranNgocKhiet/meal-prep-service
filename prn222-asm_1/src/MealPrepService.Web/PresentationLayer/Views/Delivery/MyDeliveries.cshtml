@model MealPrepService.Web.PresentationLayer.ViewModels.MyDeliveriesViewModel

@{
    ViewData["Title"] = "My Deliveries";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Deliveries</h2>
        <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalUpcoming</h3>
                    <p class="mb-0">Upcoming</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@Model.UrgentCount</h3>
                    <p class="mb-0">Within 2 Hours</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>@Model.OverdueCount</h3>
                    <p class="mb-0">Overdue</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalCompleted</h3>
                    <p class="mb-0">Completed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Deliveries Section -->
    <div class="mb-5">
        <h4 class="mb-3">
            <i class="bi bi-truck"></i> Upcoming Deliveries
            @if (Model.HasOverdueDeliveries)
            {
                <span class="badge bg-danger ms-2">@Model.OverdueCount Overdue</span>
            }
        </h4>

        @if (Model.HasUpcomingDeliveries)
        {
            @foreach (var delivery in Model.UpcomingDeliveries)
            {
                <div class="card mb-3 @(delivery.IsOverdue ? "border-danger" : "")">
                    <div class="card-header @(delivery.IsOverdue ? "bg-danger text-white" : "")">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Order #@delivery.OrderId.ToString().Substring(0, 8)</strong>
                                @if (delivery.IsOverdue)
                                {
                                    <span class="badge bg-light text-danger ms-2">OVERDUE</span>
                                }
                                else if (delivery.DeliveryTime <= DateTime.Now.AddHours(2))
                                {
                                    <span class="badge bg-warning text-dark ms-2">URGENT</span>
                                }
                            </div>
                            <div>
                                @if (delivery.OrderStatus.Equals("pending_payment", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-info">Awaiting Payment</span>
                                }
                                else if (delivery.OrderStatus.Equals("confirmed", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@delivery.OrderStatus</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><i class="bi bi-calendar-event"></i> Delivery Information</h6>
                                <p class="mb-1">
                                    <strong>Scheduled Time:</strong> 
                                    <span class="@(delivery.IsOverdue ? "text-danger" : "")">
                                        @delivery.DeliveryTime.ToString("MMM dd, yyyy hh:mm tt")
                                    </span>
                                </p>
                                <p class="mb-1"><strong>Address:</strong> @delivery.Address</p>
                                <p class="mb-0"><strong>Driver Contact:</strong> @delivery.DriverContact</p>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="bi bi-receipt"></i> Order Details</h6>
                                <p class="mb-1"><strong>Total Amount:</strong> <span class="text-primary h5">$@delivery.TotalAmount.ToString("F2")</span></p>
                                <p class="mb-1"><strong>Payment Method:</strong> @delivery.PaymentMethod</p>
                                @if (delivery.PaymentMethod.Equals("COD", StringComparison.OrdinalIgnoreCase) && 
                                     delivery.OrderStatus.Equals("pending_payment", StringComparison.OrdinalIgnoreCase))
                                {
                                    <div class="alert alert-info mt-2 mb-0">
                                        <i class="bi bi-info-circle"></i> Please have <strong>$@delivery.TotalAmount.ToString("F2")</strong> cash ready for the delivery person.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-end">
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@delivery.OrderId" class="btn btn-outline-primary">
                                <i class="bi bi-eye"></i> View Order Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-4">
                    <i class="bi bi-truck" style="font-size: 3rem; color: #ccc;"></i>
                    <h5 class="mt-3">No Upcoming Deliveries</h5>
                    <p class="text-muted">You don't have any scheduled deliveries at the moment.</p>
                    <a asp-controller="PublicMenu" asp-action="Today" class="btn btn-primary mt-2">
                        <i class="bi bi-cart-plus"></i> Order Meals
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Completed Deliveries Section -->
    <div class="mb-4">
        <h4 class="mb-3">
            <i class="bi bi-check-circle"></i> Completed Deliveries
        </h4>

        @if (Model.HasCompletedDeliveries)
        {
            @foreach (var delivery in Model.CompletedDeliveries)
            {
                <div class="card mb-3 border-success">
                    <div class="card-header bg-success text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Order #@delivery.OrderId.ToString().Substring(0, 8)</strong>
                                <span class="badge bg-light text-success ms-2">DELIVERED</span>
                            </div>
                            <div>
                                <small>@delivery.DeliveryTime.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Delivered On:</strong> @delivery.DeliveryTime.ToString("MMM dd, yyyy hh:mm tt")</p>
                                <p class="mb-0"><strong>Address:</strong> @delivery.Address</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Total Amount:</strong> $@delivery.TotalAmount.ToString("F2")</p>
                                <p class="mb-0"><strong>Payment Method:</strong> @delivery.PaymentMethod</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-end">
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@delivery.OrderId" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-eye"></i> View Order
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-4">
                    <i class="bi bi-check-circle" style="font-size: 3rem; color: #ccc;"></i>
                    <h5 class="mt-3">No Completed Deliveries</h5>
                    <p class="text-muted">Your delivery history will appear here.</p>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

<style>
    .card {
        transition: box-shadow 0.3s ease;
    }
    
    .card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .border-danger {
        border-width: 2px !important;
    }
    
    .border-success {
        border-width: 2px !important;
    }
    
    @@media (max-width: 768px) {
        .row.mb-4 .col-md-3 {
            margin-bottom: 1rem;
        }
    }
</style>
