@model MealPrepService.Web.PresentationLayer.ViewModels.OrderConfirmationViewModel

@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white text-center">
                    <i class="bi bi-x-circle" style="font-size: 3rem;"></i>
                    <h3 class="mt-2">Payment Failed</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <p class="lead">We're sorry, but your payment could not be processed.</p>
                        <p class="text-muted">Order #@Model.OrderId.ToString().Substring(0, 8)</p>
                        <p class="text-muted">Attempted on @Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                    </div>

                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> 
                        <strong>Payment Status:</strong> Failed
                        <br />
                        Your order has been created but the payment was not successful. 
                        Please try again or choose a different payment method.
                    </div>

                    <h5 class="mb-3">What happened?</h5>
                    <ul class="mb-4">
                        <li>The payment transaction was declined or cancelled</li>
                        <li>Your order is still saved and can be paid for</li>
                        <li>No charges have been made to your account</li>
                        <li>The items in your order are still reserved for you</li>
                    </ul>

                    <h5 class="mb-3">Order Details</h5>
                    <div class="table-responsive mb-4">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@detail.RecipeName</td>
                                        <td>@detail.Quantity</td>
                                        <td>$@detail.UnitPrice.ToString("F2")</td>
                                        <td>$@((detail.Quantity * detail.UnitPrice).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th>$@Model.TotalAmount.ToString("F2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">What would you like to do?</h6>
                            <div class="d-grid gap-2">
                                <form asp-action="Retry" asp-route-id="@Model.OrderId" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="bi bi-arrow-clockwise"></i> Retry Payment
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
                                    <i class="bi bi-eye"></i> View Order Details
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-list"></i> View All Orders
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        <strong>Need Help?</strong> If you continue to experience issues, please contact our support team.
                    </div>

                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-house"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
