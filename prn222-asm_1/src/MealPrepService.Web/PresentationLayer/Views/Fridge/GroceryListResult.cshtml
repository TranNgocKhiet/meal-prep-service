@model GroceryListViewModel
@{
    ViewData["Title"] = "Grocery List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-cart-check me-2" viewBox="0 0 16 16">
                        <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                    </svg>
                    Grocery List
                </h2>
                <div>
                    <button onclick="window.print()" class="btn btn-secondary me-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer me-2" viewBox="0 0 16 16">
                            <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
                            <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z"/>
                        </svg>
                        Print List
                    </button>
                    <button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#confirmPurchaseModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-check me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                        </svg>
                        Mark as Purchased
                    </button>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                        </svg>
                        Back to Fridge
                    </a>
                </div>
            </div>

            <!-- Grocery List Info -->
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-clipboard-check me-2" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                        </svg>
                        Shopping List Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <strong>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar3 me-2" viewBox="0 0 16 16">
                                        <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"/>
                                        <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                                    </svg>
                                    Meal Plan:
                                </strong> @Model.MealPlanName
                            </p>
                            <p class="mb-0">
                                <strong>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock me-2" viewBox="0 0 16 16">
                                        <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                                    </svg>
                                    Generated:
                                </strong> @Model.GeneratedDate.ToString("MMM dd, yyyy 'at' hh:mm tt")
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="display-6 text-success fw-bold">@Model.TotalMissingItems</div>
                            <div class="text-muted">Items to Buy</div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.MissingIngredients?.Any() == true)
            {
                <!-- Priority Info Alert -->
                @if (Model.MissingIngredients.Any(i => i.IsNeededSoon))
                {
                    <div class="alert alert-light border" style="background-color: #1e293b !important; color: #FFFFFF !important">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-star-fill text-warning me-2" viewBox="0 0 16 16">
                            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                        </svg>
                        <strong>Priority Items:</strong> 
                        You have <strong>@Model.MissingIngredients.Count(i => i.IsNeededSoon)</strong> item(s) needed for today or tomorrow's meals (marked with *).
                    </div>
                }

                <!-- Grocery Items List -->
                <div class="card shopping-list-card shadow-lg">
                    <div class="card-header shopping-list-header text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-basket-fill me-2" style="font-size: 1.3rem;"></i>
                                Shopping List
                            </h5>
                            <div class="form-check">
                                <input type="checkbox" id="checkAll" class="form-check-input custom-checkbox" />
                                <label class="form-check-label text-white ms-2" for="checkAll">Select All</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-3">
                        <form id="groceryForm" asp-action="SyncFridge" asp-controller="Fridge" method="post">
                            <input type="hidden" name="MealPlanId" value="@Model.MealPlanId" />
                            
                            @foreach (var item in Model.MissingIngredients.OrderByDescending(i => i.IsNeededSoon).ThenBy(i => i.EarliestNeededDate).ThenBy(i => i.IngredientName))
                            {
                                <div class="grocery-item-card @(item.IsNeededSoon ? "priority-item-card" : "")" data-ingredient-id="@item.IngredientId">
                                    <div class="row g-3 align-items-center">
                                        <!-- Checkbox Column -->
                                        <div class="col-auto">
                                            <input type="checkbox" 
                                                   class="form-check-input custom-checkbox item-checkbox" 
                                                   name="PurchasedIngredients[@item.IngredientId].IsPurchased"
                                                   value="true"
                                                   data-ingredient-id="@item.IngredientId" />
                                            <input type="hidden" 
                                                   name="PurchasedIngredients[@item.IngredientId].IngredientId" 
                                                   value="@item.IngredientId" />
                                            <input type="hidden" 
                                                   name="PurchasedIngredients[@item.IngredientId].Unit" 
                                                   value="@item.Unit" />
                                        </div>
                                        
                                        <!-- Ingredient Info Column -->
                                        <div class="col-12 col-md-3">
                                            <div class="ingredient-info">
                                                @if (item.IsNeededSoon)
                                                {
                                                    <span class="badge badge-urgent mb-1">
                                                        <i class="bi bi-star-fill me-1"></i>URGENT
                                                    </span>
                                                }
                                                <h6 class="ingredient-name mb-0">@item.IngredientName</h6>
                                            </div>
                                        </div>
                                        
                                        <!-- Quantity Needed Column -->
                                        <div class="col-6 col-md-3">
                                            <div class="info-block">
                                                <label class="info-label">
                                                    <i class="bi bi-cart3 me-1"></i>Quantity Needed
                                                </label>
                                                <div class="info-value">
                                                    <span class="badge quantity-badge-dark">@item.NeededAmountDisplay</span>
                                                </div>
                                                <small class="@(item.IsNeededSoon ? "text-warning" : "text-muted") d-block mt-1">
                                                    <i class="bi bi-calendar3 me-1"></i>By @item.NeededByDisplay
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <!-- Purchase Quantity Column -->
                                        <div class="col-6 col-md-2">
                                            <div class="info-block">
                                                <label class="info-label" for="qty-@item.IngredientId">
                                                    <i class="bi bi-bag-check-fill me-1"></i>Buy Quantity
                                                </label>
                                                <div class="input-group input-group-sm mt-1">
                                                    <input type="number" 
                                                           id="qty-@item.IngredientId"
                                                           class="form-control quantity-input-dark" 
                                                           name="PurchasedIngredients[@item.IngredientId].Amount" 
                                                           value="@item.NeededAmount.ToString("F2")"
                                                           step="0.01"
                                                           min="0.01"
                                                           max="10000"
                                                           data-ingredient-id="@item.IngredientId" />
                                                    <span class="input-group-text input-group-dark">@item.Unit</span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Expiry Date Column -->
                                        <div class="col-12 col-md-3">
                                            <div class="info-block">
                                                <label class="info-label" for="exp-@item.IngredientId">
                                                    <i class="bi bi-calendar-event me-1"></i>Expiry Date
                                                </label>
                                                <input type="date" 
                                                       id="exp-@item.IngredientId"
                                                       class="form-control form-control-sm expiry-input-dark mt-1" 
                                                       name="PurchasedIngredients[@item.IngredientId].ExpiryDate" 
                                                       value="@DateTime.Today.AddDays(7).ToString("yyyy-MM-dd")"
                                                       min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                                       max="@DateTime.Today.AddYears(5).ToString("yyyy-MM-dd")"
                                                       data-ingredient-id="@item.IngredientId" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </form>
                    </div>
                </div>

                    <!-- Print-friendly version -->
                    <div class="d-none d-print-block mt-4">
                        <h3>Shopping List</h3>
                        <p><strong>Meal Plan:</strong> @Model.MealPlanName</p>
                        <p><strong>Date:</strong> @Model.GeneratedDate.ToString("MMM dd, yyyy")</p>
                        
                        @if (Model.MissingIngredients.Any(i => i.IsNeededSoon))
                        {
                            <h4 class="mt-4">? PRIORITY - Needed Today or Tomorrow:</h4>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.MissingIngredients.Where(i => i.IsNeededSoon).OrderBy(i => i.EarliestNeededDate).ThenBy(i => i.IngredientName))
                                {
                                    <li class="mb-2">
                                        <input type="checkbox" /> <strong>@item.IngredientName</strong> - @item.NeededAmountDisplay (Needed by: @item.NeededByDisplay)
                                    </li>
                                }
                            </ul>
                        }
                        
                        @if (Model.MissingIngredients.Any(i => !i.IsNeededSoon))
                        {
                            <h4 class="mt-4">Other Items:</h4>
                            <ul class="list-unstyled">
                                @foreach (var item in Model.MissingIngredients.Where(i => !i.IsNeededSoon).OrderBy(i => i.EarliestNeededDate).ThenBy(i => i.IngredientName))
                                {
                                    <li class="mb-2">
                                        <input type="checkbox" /> <strong>@item.IngredientName</strong> - @item.NeededAmountDisplay (Needed by: @item.NeededByDisplay)
                                    </li>
                                }
                            </ul>
                        }
                    </div>
            }
            else
            {
                <div class="alert alert-success text-center py-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle mb-3" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    <h4>You're All Set!</h4>
                    <p class="text-muted">You have all the ingredients needed for this meal plan in your fridge.</p>
                </div>
            }


            <div class="alert alert-info mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
                <strong>How it works:</strong> 
                <ul class="mb-0 mt-2">
                    <li><strong>Priority items</strong> (yellow background with star icon *) are needed for today or tomorrow's meals - shop for these first!</li>
                    <li><strong>Other items</strong> are for meals coming up later this week.</li>
                    <li><strong>Edit quantities:</strong> Adjust the purchase quantity if you plan to buy more or less than the recommended amount.</li>
                    <li><strong>Set expiry dates:</strong> Update the expiry date based on the actual product you purchase (default is 7 days from today).</li>
                    <li><strong>Multiple expiry dates:</strong> The same ingredient with different expiry dates will be stored as separate items in your fridge for better inventory tracking.</li>
                    <li>After shopping, check the items you purchased and click "Mark as Purchased" to automatically update your virtual fridge.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Purchase Modal -->
<div class="modal fade" id="confirmPurchaseModal" tabindex="-1" aria-labelledby="confirmPurchaseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-id" id="confirmPurchaseModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bag-check me-2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                        <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                    </svg>
                    Confirm Purchase
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="selectedItemsCount" class="text-dark mb-3">You have selected <strong>0</strong> item(s) to add to your fridge.</p>
                <p class="text-dark mb-0">The selected ingredients will be added to your virtual fridge inventory. This will help track what you have available for cooking your meals.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmPurchaseBtn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    Confirm & Update Fridge
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Check all functionality
        document.getElementById('checkAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.item-checkbox');
            checkboxes.forEach(cb => {
                cb.checked = this.checked;
                toggleRowStyle(cb);
            });
            updateSelectedCount();
        });

        // Strike through checked items
        document.querySelectorAll('.item-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                toggleRowStyle(this);
                updateSelectedCount();
                
                // Update "check all" checkbox
                const allCheckboxes = document.querySelectorAll('.item-checkbox');
                const checkAll = document.getElementById('checkAll');
                if (checkAll) {
                    checkAll.checked = Array.from(allCheckboxes).every(cb => cb.checked);
                }
            });
        });

        function toggleRowStyle(checkbox) {
            const card = checkbox.closest('.grocery-item-card');
            if (checkbox.checked) {
                card.classList.add('item-checked');
            } else {
                card.classList.remove('item-checked');
            }
        }

        function updateSelectedCount() {
            const selectedCount = document.querySelectorAll('.item-checkbox:checked').length;
            const countElement = document.getElementById('selectedItemsCount');
            if (countElement) {
                countElement.innerHTML = `You have selected <strong>${selectedCount}</strong> item(s) to add to your fridge.`;
            }
        }

        // Validate quantity inputs
        document.querySelectorAll('.quantity-input-dark').forEach(input => {
            input.addEventListener('change', function() {
                const value = parseFloat(this.value);
                if (isNaN(value) || value <= 0) {
                    alert('Please enter a valid quantity greater than 0.');
                    this.value = this.getAttribute('data-original-value') || '1.00';
                } else if (value > 10000) {
                    alert('Quantity cannot exceed 10000.');
                    this.value = '10000';
                } else {
                    // Store the original value for validation
                    this.setAttribute('data-original-value', this.value);
                }
            });
            
            // Store initial value
            input.setAttribute('data-original-value', input.value);
        });

        // Validate expiry date inputs
        document.querySelectorAll('.expiry-input-dark').forEach(input => {
            input.addEventListener('change', function() {
                const selectedDate = new Date(this.value);
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                
                const maxDate = new Date();
                maxDate.setFullYear(maxDate.getFullYear() + 5);
                
                if (selectedDate < today) {
                    alert('Expiry date cannot be in the past. Please select today or a future date.');
                    // Reset to default (7 days from today)
                    const defaultDate = new Date();
                    defaultDate.setDate(defaultDate.getDate() + 7);
                    this.value = defaultDate.toISOString().split('T')[0];
                } else if (selectedDate > maxDate) {
                    alert('Expiry date cannot be more than 5 years in the future.');
                    this.value = maxDate.toISOString().split('T')[0];
                }
            });
        });

        // Confirm purchase button
        document.getElementById('confirmPurchaseBtn')?.addEventListener('click', function() {
            const selectedCheckboxes = document.querySelectorAll('.item-checkbox:checked');
            
            if (selectedCheckboxes.length === 0) {
                alert('Please select at least one item to purchase.');
                return;
            }
            
            // Validate all quantity and expiry inputs for selected items
            let hasErrors = false;
            selectedCheckboxes.forEach(checkbox => {
                const row = checkbox.closest('tr');
                const ingredientId = checkbox.getAttribute('data-ingredient-id');
                
                // Validate quantity
                const quantityInput = row.querySelector(`.quantity-input-dark[data-ingredient-id="${ingredientId}"]`);
                if (quantityInput) {
                    const qty = parseFloat(quantityInput.value);
                    if (isNaN(qty) || qty <= 0 || qty > 10000) {
                        hasErrors = true;
                        quantityInput.classList.add('is-invalid');
                        alert('Please correct the quantity values before proceeding.');
                        return;
                    }
                    quantityInput.classList.remove('is-invalid');
                }
                
                // Validate expiry date
                const expiryInput = row.querySelector(`.expiry-input-dark[data-ingredient-id="${ingredientId}"]`);
                if (expiryInput) {
                    const expiryDate = new Date(expiryInput.value);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);
                    
                    if (expiryDate < today) {
                        hasErrors = true;
                        expiryInput.classList.add('is-invalid');
                        alert('Please correct the expiry dates before proceeding.');
                        return;
                    }
                    expiryInput.classList.remove('is-invalid');
                }
            });
            
            if (hasErrors) {
                return;
            }
            
            // Submit the form
            document.getElementById('groceryForm').submit();
        });

        // Update count when modal is shown
        document.getElementById('confirmPurchaseModal')?.addEventListener('show.bs.modal', function() {
            updateSelectedCount();
        });

        // Add visual feedback when editing quantity/expiry
        document.querySelectorAll('.quantity-input-dark, .expiry-input-dark').forEach(input => {
            input.addEventListener('focus', function() {
                this.classList.add('border-primary');
            });
            
            input.addEventListener('blur', function() {
                this.classList.remove('border-primary');
            });
        });
