@page
@model MealPrepService.Web.Pages.Menu.AddMealModel
@{
    ViewData["Title"] = "Add Meal to Menu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Add Meal to Menu</h4>
                    <small class="text-muted">Menu Date: @Model.MenuDateDisplay</small>
                </div>
                <div class="card-body">
                    <form asp-page="AddMeal" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MenuId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="RecipeId" class="form-label">Select Recipe</label>
                            <select asp-for="RecipeId" class="form-select" id="recipeSelect">
                                <option value="">-- Select a recipe --</option>
                                @foreach (var recipe in Model.AvailableRecipes)
                                {
                                    <option value="@recipe.Id" 
                                            data-calories="@recipe.TotalCalories" 
                                            data-protein="@recipe.ProteinG" 
                                            data-fat="@recipe.FatG" 
                                            data-carbs="@recipe.CarbsG">
                                        @recipe.RecipeName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="RecipeId" class="text-danger"></span>
                        </div>

                        <div id="recipeNutrition" class="alert alert-light d-none mb-3">
                            <h6>Nutrition Information:</h6>
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>Calories:</strong> <span id="calories">0</span> kcal
                                </div>
                                <div class="col-md-3">
                                    <strong>Protein:</strong> <span id="protein">0</span>g
                                </div>
                                <div class="col-md-3">
                                    <strong>Fat:</strong> <span id="fat">0</span>g
                                </div>
                                <div class="col-md-3">
                                    <strong>Carbs:</strong> <span id="carbs">0</span>g
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Price ($)</label>
                                <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableQuantity" class="form-label">Available Quantity</label>
                                <input asp-for="AvailableQuantity" type="number" min="1" class="form-control" placeholder="0" />
                                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@Model.MenuId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Meal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('recipeSelect').addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            var nutritionDiv = document.getElementById('recipeNutrition');
            
            if (selectedOption.value) {
                document.getElementById('calories').textContent = selectedOption.getAttribute('data-calories');
                document.getElementById('protein').textContent = selectedOption.getAttribute('data-protein');
                document.getElementById('fat').textContent = selectedOption.getAttribute('data-fat');
                document.getElementById('carbs').textContent = selectedOption.getAttribute('data-carbs');
                nutritionDiv.classList.remove('d-none');
            } else {
                nutritionDiv.classList.add('d-none');
            }
        });
    </script>
}
