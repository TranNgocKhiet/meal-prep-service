@page "{tab?}"
@model MealPrepService.Web.Pages.Menu.IndexModel
@{
    ViewData["Title"] = "Menu Management";
    var activeTab = (string?)ViewData["ActiveTab"] ?? "current";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Menu Management</h2>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Menu
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tab Navigation -->
    <ul class="nav nav-tabs mb-3" id="menuTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link @(activeTab == "current" ? "active" : "")" 
               asp-page="Index" asp-route-tab="current" 
               role="tab">
                <i class="bi bi-calendar-check"></i> Current & Future Menus
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(activeTab == "past" ? "active" : "")" 
               asp-page="Index" asp-route-tab="past" 
               role="tab">
                <i class="bi bi-calendar-x"></i> Past Menus
            </a>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="card">
        <div class="card-header" style="background-color: #1e293b; border-color: rgba(34,197,94,.25);">
            <h5 class="mb-0 text-white">
                @if (activeTab == "current")
                {
                    <text>Current & Future Menus (Next 30 Days)</text>
                }
                else
                {
                    <text>Past Menus (Last 90 Days)</text>
                }
            </h5>
            <small class="text-white" style="opacity: 0.7;">@(((DateTime?)ViewData["StartDate"])?.ToString("MMM dd, yyyy")) - @(((DateTime?)ViewData["EndDate"])?.ToString("MMM dd, yyyy"))</small>
        </div>
        <div class="card-body" style="background-color: #0F172A;">
            @if (Model.Menus.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="text-white" style="background-color: transparent;">Date</th>
                                <th class="text-white" style="background-color: transparent;">Day</th>
                                <th class="text-white" style="background-color: transparent;">Status</th>
                                <th class="text-white" style="background-color: transparent;">Meals Count</th>
                                <th class="text-white" style="background-color: transparent;">Total Available</th>
                                <th class="text-white" style="background-color: transparent;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var menu in Model.Menus)
                            {
                                <tr>
                                    <td class="text-white" style="background-color: transparent;">@menu.MenuDate.ToString("MMM dd, yyyy")</td>
                                    <td class="text-white" style="background-color: transparent;">@menu.MenuDate.ToString("dddd")</td>
                                    <td class="text-white" style="background-color: transparent;">
                                        @if (menu.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-secondary">Draft</span>
                                        }
                                        else if (menu.Status.Equals("active", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (menu.Status.Equals("inactive", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@menu.Status</span>
                                        }
                                    </td>
                                    <td class="text-white" style="background-color: transparent;">@menu.MenuMeals.Count</td>
                                    <td class="text-white" style="background-color: transparent;">@menu.MenuMeals.Sum(m => m.AvailableQuantity)</td>
                                    <td class="text-white" style="background-color: transparent;">
                                        <a asp-page="Details" asp-route-id="@menu.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (activeTab == "current")
                                        {
                                            @if (menu.Status.Equals("draft", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <a asp-page="AddMeal" asp-route-menuId="@menu.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-plus"></i> Add Meal
                                                </a>
                                                <form asp-page="Publish" asp-route-menuId="@menu.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to publish this menu?')">
                                                        <i class="bi bi-check-circle"></i> Publish
                                                    </button>
                                                </form>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    @if (activeTab == "current")
                    {
                        <text>No menus found for the next 30 days. Create a new menu to get started.</text>
                    }
                    else
                    {
                        <text>No past menus found in the last 90 days.</text>
                    }
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="/Home/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        color: #fff;
        background-color: #1e293b;
        border: 1px solid rgba(34,197,94,.25);
        margin-right: 5px;
    }
    
    .nav-tabs .nav-link:hover {
        background-color: #334155;
        border-color: rgba(34,197,94,.5);
    }
    
    .nav-tabs .nav-link.active {
        color: #fff;
        background-color: #22c55e;
        border-color: #22c55e;
    }
</style>
