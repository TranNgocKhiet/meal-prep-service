@model string

@{
    var status = Model?.ToLower() ?? "unknown";
    var badgeClass = "bg-secondary";
    var icon = "bi-question-circle";
    var displayText = Model ?? "Unknown";

    switch (status)
    {
        case "pending":
            badgeClass = "bg-warning text-dark";
            icon = "bi-clock";
            displayText = "Pending";
            break;
        case "pending_payment":
            badgeClass = "bg-info";
            icon = "bi-hourglass-split";
            displayText = "Pending Payment";
            break;
        case "confirmed":
            badgeClass = "bg-success";
            icon = "bi-check-circle";
            displayText = "Confirmed";
            break;
        case "delivered":
            badgeClass = "bg-primary";
            icon = "bi-box-seam";
            displayText = "Delivered";
            break;
        case "payment_failed":
            badgeClass = "bg-danger";
            icon = "bi-x-circle";
            displayText = "Payment Failed";
            break;
        case "cancelled":
            badgeClass = "bg-dark";
            icon = "bi-slash-circle";
            displayText = "Cancelled";
            break;
    }
}

<span class="badge @badgeClass" title="Order Status: @displayText">
    <i class="@icon"></i> @displayText
</span>
