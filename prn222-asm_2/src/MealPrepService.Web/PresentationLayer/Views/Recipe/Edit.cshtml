@model MealPrepService.Web.PresentationLayer.ViewModels.EditRecipeViewModel

@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Edit Recipe</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="RecipeName" class="form-label"></label>
                            <input asp-for="RecipeName" class="form-control" />
                            <span asp-validation-for="RecipeName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Instructions" class="form-label"></label>
                            <textarea asp-for="Instructions" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="Instructions" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Current Nutrition Information -->
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Current Nutrition</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Total Calories:</strong> @Model.TotalCalories.ToString("F0")</p>
                    <p class="mb-2"><strong>Protein:</strong> @Model.ProteinG.ToString("F1")g</p>
                    <p class="mb-2"><strong>Fat:</strong> @Model.FatG.ToString("F1")g</p>
                    <p class="mb-0"><strong>Carbs:</strong> @Model.CarbsG.ToString("F1")g</p>
                </div>
            </div>

            <!-- Ingredients List -->
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Ingredients</h5>
                </div>
                <div class="card-body" style="background-color: #0F172A;">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Ingredients.Any())
                    {
                        <div class="list-group">
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <div class="list-group-item mb-2" style="background-color: #000; border: 1px solid rgba(34,197,94,.25); border-radius: 4px;">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <strong class="text-white">@ingredient.IngredientName</strong><br />
                                            <small class="text-white" style="opacity: 0.7;">
                                                <span id="amount-display-@ingredient.IngredientId">@ingredient.Amount</span> @ingredient.Unit
                                            </small>
                                        </div>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editIngredientModal-@ingredient.IngredientId">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#removeIngredientModal-@ingredient.IngredientId">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                @* Edit Ingredient Modal *@
                                <div class="modal fade" id="editIngredientModal-@ingredient.IngredientId" tabindex="-1" aria-labelledby="editIngredientModalLabel-@ingredient.IngredientId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content" style="background-color: #0F172A; border-color: rgba(34,197,94,.25);">
                                            <div class="modal-header text-white" style="background-color: #1e293b; border-bottom: 1px solid rgba(34,197,94,.25);">
                                                <h5 class="modal-title text-white" id="editIngredientModalLabel-@ingredient.IngredientId">
                                                    <i class="bi bi-pencil me-2"></i>
                                                    Edit Ingredient Amount
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form asp-action="UpdateIngredient" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="recipeId" value="@Model.Id" />
                                                <input type="hidden" name="ingredientId" value="@ingredient.IngredientId" />
                                                <div class="modal-body text-white" style="background-color: #0F172A;">
                                                    <div class="mb-3">
                                                        <label class="form-label text-white">Ingredient</label>
                                                        <input type="text" class="form-control" value="@ingredient.IngredientName" readonly style="background-color: #020617; border: 1px solid rgba(34,197,94,.35); color: #fff;" />
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label text-white">Amount (@ingredient.Unit)</label>
                                                        <input type="number" name="amount" class="form-control" value="@ingredient.Amount" step="0.01" min="0.01" max="10000" required style="background-color: #020617; border: 1px solid rgba(34,197,94,.35); color: #fff;" />
                                                    </div>
                                                </div>
                                                <div class="modal-footer" style="background-color: #0F172A; border-top: 1px solid rgba(34,197,94,.25);">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-warning">
                                                        <i class="bi bi-check-circle"></i> Update Amount
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                @* Remove Ingredient Modal *@
                                <div class="modal fade" id="removeIngredientModal-@ingredient.IngredientId" tabindex="-1" aria-labelledby="removeIngredientModalLabel-@ingredient.IngredientId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content" style="background-color: #0F172A; border-color: rgba(34,197,94,.25);">
                                            <div class="modal-header text-white" style="background-color: #1e293b; border-bottom: 1px solid rgba(34,197,94,.25);">
                                                <h5 class="modal-title text-white" id="removeIngredientModalLabel-@ingredient.IngredientId">
                                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                                    Confirm Remove Ingredient
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-white" style="background-color: #0F172A;">
                                                <p>Are you sure you want to remove <strong>@ingredient.IngredientName</strong> from this recipe?</p>
                                                <p class="text-muted mb-0">This action cannot be undone.</p>
                                            </div>
                                            <div class="modal-footer" style="background-color: #0F172A; border-top: 1px solid rgba(34,197,94,.25);">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="RemoveIngredient" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="recipeId" value="@Model.Id" />
                                                    <input type="hidden" name="ingredientId" value="@ingredient.IngredientId" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Remove Ingredient
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-white mb-0" style="opacity: 0.7;">No ingredients added yet.</p>
                    }
                    
                    <div class="mt-3">
                        <a asp-action="AddIngredient" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary w-100">
                            <i class="bi bi-plus-circle"></i> Add Ingredient
                        </a>
                    </div>
                </div>
            </div>

            <!-- Delete Recipe -->
            <div class="card mt-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-trash"></i> Danger Zone</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-2">
                        Deleting this recipe is permanent and cannot be undone. 
                        Recipes used in active menus cannot be deleted.
                    </p>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" 
                          onsubmit="return confirm('Are you sure you want to delete this recipe? This action cannot be undone.');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-trash"></i> Delete Recipe
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
