@model MealPrepService.Web.PresentationLayer.ViewModels.StaffAccountViewModel
@{
    ViewData["Title"] = "Delete Staff Account";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle"></i> Delete Staff Account</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this staff account?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Full Name:</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Role:</dt>
                        <dd class="col-sm-9">
                            <span class="@Model.RoleBadgeClass">@Model.Role</span>
                        </dd>
                    </dl>

                    <form asp-action="DeleteStaffAccountConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="StaffAccounts" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Account
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
