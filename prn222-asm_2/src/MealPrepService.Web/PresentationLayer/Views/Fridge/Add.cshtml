@model AddFridgeItemViewModel
@{
    ViewData["Title"] = "Add Fridge Item";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus-circle me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                        </svg>
                        Add Item to Fridge
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Add" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="IngredientId" class="form-label fw-bold"></label>
                            <select asp-for="IngredientId" class="form-select form-select-lg" required data-placeholder="Search and select an ingredient...">
                                <option value="">-- Select an ingredient --</option>
                                @if (Model.AvailableIngredients?.Any() == true)
                                {
                                    @foreach (var ingredient in Model.AvailableIngredients.OrderBy(i => i.IngredientName))
                                    {
                                        <option value="@ingredient.Id">@ingredient.IngredientName (@ingredient.Unit)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="IngredientId" class="text-danger"></span>
                        </div>



                        <div class="mb-4">
                            <label asp-for="CurrentAmount" class="form-label fw-bold"></label>
                            <input asp-for="CurrentAmount" class="form-control form-control-lg" type="number" step="0.01" min="0.01" placeholder="e.g., 500" />
                            <span asp-validation-for="CurrentAmount" class="text-danger"></span>
                            <small class="form-text text-muted">Enter the amount in the ingredient's unit (shown in dropdown)</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ExpiryDate" class="form-label fw-bold"></label>
                            <input asp-for="ExpiryDate" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            <small class="form-text text-muted">Items expiring within 3 days will be highlighted</small>
                        </div>

                        <div class="alert alert-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                            </svg>
                            <strong>Tip:</strong> Keep your fridge inventory up to date to get accurate grocery lists for your meal plans.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                                </svg>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                                Add to Fridge
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4 border-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lightbulb me-2" viewBox="0 0 16 16">
                            <path d="M2 6a6 6 0 1 1 10.174 4.31c-.203.196-.359.4-.453.619l-.762 1.769A.5.5 0 0 1 10.5 13a.5.5 0 0 1 0 1 .5.5 0 0 1 0 1l-.224.447a1 1 0 0 1-.894.553H6.618a1 1 0 0 1-.894-.553L5.5 15a.5.5 0 0 1 0-1 .5.5 0 0 1 0-1 .5.5 0 0 1-.46-.302l-.761-1.77a1.964 1.964 0 0 0-.453-.618A5.984 5.984 0 0 1 2 6zm6-5a5 5 0 0 0-3.479 8.592c.263.254.514.564.676.941L5.83 12h4.342l.632-1.467c.162-.377.413-.687.676-.941A5 5 0 0 0 8 1z"/>
                        </svg>
                        Storage Tips
                    </h5>
                    <ul class="mb-0">
                        <li><strong>Vegetables:</strong> Most last 3-7 days in the fridge</li>
                        <li><strong>Dairy:</strong> Check expiry dates on packaging</li>
                        <li><strong>Meat:</strong> Use within 1-2 days or freeze for longer storage</li>
                        <li><strong>Dry Goods:</strong> Can last months when stored properly</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
