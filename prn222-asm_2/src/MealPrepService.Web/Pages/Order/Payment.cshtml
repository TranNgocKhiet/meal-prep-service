@page
@model MealPrepService.Web.Pages.Order.PaymentModel
@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Payment</h4>
                    <small class="text-muted">Order #@Model.OrderId.ToString().Substring(0, 8)</small>
                </div>
                <div class="card-body">
                    <form asp-page="Payment" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="OrderId" />
                        <input type="hidden" asp-for="OrderTotal" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h5 class="mb-3">Order Summary</h5>
                        <div class="table-responsive mb-4">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>@detail.RecipeName</td>
                                            <td>@detail.Quantity</td>
                                            <td>$@detail.UnitPrice.ToString("F2")</td>
                                            <td>$@((detail.Quantity * detail.UnitPrice).ToString("F2"))</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th>$@Model.OrderTotal.ToString("F2")</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <h5 class="mb-3">Delivery Information</h5>
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <p class="mb-1"><strong>Address:</strong> @Model.DeliveryAddress</p>
                                @if (Model.PreferredDeliveryTime.HasValue)
                                {
                                    <p class="mb-0"><strong>Preferred Time:</strong> @Model.PreferredDeliveryTime.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                                }
                            </div>
                        </div>

                        <h5 class="mb-3">Payment Method</h5>
                        <div class="mb-4">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="COD" id="paymentCOD" checked />
                                <label class="form-check-label" for="paymentCOD">
                                    <i class="bi bi-cash-coin"></i> <strong>Cash on Delivery (COD)</strong>
                                    <br />
                                    <small class="text-muted">Pay with cash when your order is delivered</small>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="PaymentMethod" value="VNPAY" id="paymentVNPAY" />
                                <label class="form-check-label" for="paymentVNPAY">
                                    <i class="bi bi-credit-card"></i> <strong>VNPAY Online Payment</strong>
                                    <br />
                                    <small class="text-muted">Pay securely online with VNPAY gateway</small>
                                </label>
                            </div>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            <strong>Note:</strong> For COD orders, payment will be confirmed by the delivery person upon delivery. 
                            For VNPAY, you'll be redirected to the payment gateway.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Confirm & Pay
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
