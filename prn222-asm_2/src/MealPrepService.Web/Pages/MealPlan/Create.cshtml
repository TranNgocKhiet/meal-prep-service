@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        /* Make placeholder text white */
        #PlanName::placeholder {
            color: #fff !important;
            opacity: 0.7;
        }
        
        /* Style the toggle switch - grey when off */
        .form-check-input {
            background-color: #6c757d !important;
            border-color: #6c757d !important;
        }
        
        .form-check-input:checked {
            background-color: #22c55e !important;
            border-color: #22c55e !important;
        }
        
        .form-check-input:focus {
            box-shadow: 0 0 0 0.25rem rgba(34, 197, 94, 0.25) !important;
        }

        /* Loading Screen Styles */
        #aiLoadingScreen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 23, 42, 0.98);
            z-index: 9999;
            justify-content: center;
            align-items: center;
        }

        #aiLoadingScreen.show {
            display: flex;
        }

        .loading-content {
            text-align: center;
            color: #fff;
        }

        .robot-icon {
            font-size: 120px;
            color: #22c55e;
            animation: robotBounce 1.5s ease-in-out infinite;
        }

        @@keyframes robotBounce {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            25% {
                transform: translateY(-20px) rotate(-5deg);
            }
            75% {
                transform: translateY(-10px) rotate(5deg);
            }
        }

        .loading-text {
            font-size: 1.8rem;
            font-weight: 600;
            margin-top: 2rem;
            color: #fff;
        }

        .loading-subtext {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.7);
            margin-top: 1rem;
        }

        .loading-dots {
            display: inline-block;
        }

        .loading-dots span {
            animation: dotPulse 1.5s infinite;
            opacity: 0;
        }

        .loading-dots span:nth-child(1) {
            animation-delay: 0s;
        }

        .loading-dots span:nth-child(2) {
            animation-delay: 0.3s;
        }

        .loading-dots span:nth-child(3) {
            animation-delay: 0.6s;
        }

        @@keyframes dotPulse {
            0%, 100% {
                opacity: 0;
            }
            50% {
                opacity: 1;
            }
        }

        .progress-bar-container {
            width: 300px;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            margin: 2rem auto 0;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #22c55e, #16a34a);
            border-radius: 10px;
            animation: progressAnimation 2s ease-in-out infinite;
        }

        @@keyframes progressAnimation {
            0% {
                width: 0%;
            }
            50% {
                width: 70%;
            }
            100% {
                width: 100%;
            }
        }

        .ai-features {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .ai-feature {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.95rem;
        }

        .ai-feature svg {
            color: #22c55e;
        }
    </style>
    <script>
        // Hide loading screen on page load (in case of validation errors or page refresh)
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('aiLoadingScreen').classList.remove('show');
        });
        
        const form = document.getElementById('mealPlanForm');
        const generateWithAICheckbox = document.getElementById('generateWithAI');
        const infoText = document.getElementById('planTypeInfo');
        const startDateInput = document.getElementById('StartDate');
        const endDateInput = document.getElementById('EndDate');
        const daysCounter = document.getElementById('daysCounter');
        const maxMealPlanDays = @ViewData["MaxMealPlanDays"];
        
        // Update info text when checkbox changes
        generateWithAICheckbox.addEventListener('change', function() {
            if (this.checked) {
                infoText.textContent = 'AI will automatically generate meals based on your health profile. You can still edit the plan after creation.';
            } else {
                infoText.textContent = 'If you choose manual creation, you\'ll be able to add meals and recipes after creating the plan.';
            }
        });
        
        // Update days counter
        function updateDaysCounter() {
            const startDate = new Date(startDateInput.value);
            const endDate = new Date(endDateInput.value);
            
            if (startDate && endDate && endDate >= startDate) {
                const daysDifference = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                
                if (daysDifference > maxMealPlanDays) {
                    daysCounter.innerHTML = `<span style="color: #ef4444;">⚠ ${daysDifference} days (exceeds limit)</span>`;
                } else if (daysDifference === maxMealPlanDays) {
                    daysCounter.innerHTML = `<span style="color: #22c55e;">✓ ${daysDifference} days (maximum)</span>`;
                } else {
                    daysCounter.innerHTML = `<span style="color: #22c55e;">✓ ${daysDifference} days</span>`;
                }
            } else {
                daysCounter.innerHTML = '';
            }
        }
        
        // Validate date range and show modal if exceeded
        function validateDateRange() {
            const startDate = new Date(startDateInput.value);
            const endDate = new Date(endDateInput.value);
            
            if (startDate && endDate && endDate >= startDate) {
                const daysDifference = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
                
                if (daysDifference > maxMealPlanDays) {
                    // Update modal with selected days
                    document.getElementById('selectedDays').textContent = daysDifference;
                    
                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('dateLimitModal'));
                    modal.show();
                    
                    // Reset end date to max allowed
                    const maxEndDate = new Date(startDate);
                    maxEndDate.setDate(maxEndDate.getDate() + maxMealPlanDays - 1);
                    endDateInput.value = maxEndDate.toISOString().split('T')[0];
                    
                    // Update counter after adjustment
                    updateDaysCounter();
                    
                    return false;
                }
            }
            return true;
        }
        
        // Add event listeners for date validation and counter update
        startDateInput.addEventListener('change', function() {
            updateDaysCounter();
            validateDateRange();
        });
        
        endDateInput.addEventListener('change', function() {
            updateDaysCounter();
            validateDateRange();
        });
        
        // Initialize counter on page load
        updateDaysCounter();
        
        // Change form action based on checkbox state and show loading screen
        form.addEventListener('submit', function(e) {
            if (!validateDateRange()) {
                e.preventDefault();
                return false;
            }
            
            if (generateWithAICheckbox.checked) {
                // Change to GenerateAI handler
                form.action = '@Url.Page("/MealPlan/Create", new { handler = "GenerateAI" })';
                
                // Show loading screen
                document.getElementById('aiLoadingScreen').classList.add('show');
                
                // Hide loading screen if form submission fails (after 30 seconds timeout)
                setTimeout(function() {
                    const loadingScreen = document.getElementById('aiLoadingScreen');
                    if (loadingScreen.classList.contains('show')) {
                        loadingScreen.classList.remove('show');
                        alert('The AI generation is taking longer than expected. Please check your meal plan list or try again.');
                    }
                }, 30000);
            } else {
                // Keep default Create handler
                form.action = '@Url.Page("/MealPlan/Create")';
            }
        });
    </script>
}
