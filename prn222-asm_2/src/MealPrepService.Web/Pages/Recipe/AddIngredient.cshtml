@page "{id:guid}"
@model MealPrepService.Web.Pages.Recipe.AddIngredientModel
@{
    ViewData["Title"] = "Add Ingredient to Recipe";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Add Ingredient to Recipe
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Recipe:</strong> @Model.RecipeName
                    </div>

                    <form asp-page="AddIngredient" method="post">
                        <input type="hidden" asp-for="RecipeId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IngredientId" class="form-label">
                                <i class="bi bi-egg me-1"></i>
                                Select Ingredient
                            </label>
                            <select asp-for="IngredientId" class="form-select" required>
                                <option value="">-- Select an ingredient --</option>
                                @foreach (var ingredient in Model.AvailableIngredients)
                                {
                                    <option value="@ingredient.Id">
                                        @ingredient.IngredientName (@ingredient.Unit - @ingredient.CaloPerUnit.ToString("F1") cal)
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="IngredientId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-lightbulb me-1"></i>
                                Choose an ingredient from the list. The unit and calories per unit are shown for reference.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-calculator me-1"></i>
                                Amount
                            </label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" 
                                   placeholder="e.g., 100, 2.5, 0.5" required />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Enter the amount in the ingredient's unit (shown in the dropdown above).
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Note:</strong> Make sure the amount matches the unit of measurement for the selected ingredient.
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@Model.RecipeId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>
                                Add Ingredient
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Quick Actions</h6>
                    <div class="d-flex gap-2">
                        <a asp-page="Details" asp-route-id="@Model.RecipeId" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>
                            View Recipe Details
                        </a>
                        <a asp-page="/Ingredient/Create" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-plus-circle me-1"></i>
                            Create New Ingredient
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
