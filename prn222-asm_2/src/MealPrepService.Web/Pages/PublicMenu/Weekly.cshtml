@page
@model MealPrepService.Web.Pages.PublicMenu.WeeklyModel
@{
    ViewData["Title"] = "Weekly Menu";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2>Weekly Menu</h2>
        <p class="lead">@Model.WeekStartDate.ToString("MMM dd") - @Model.WeekEndDate.ToString("MMM dd, yyyy")</p>
    </div>

    <div class="d-flex justify-content-between mb-3">
        <a asp-page="PreviousWeek" asp-route-currentWeekStart="@Model.WeekStartDate" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Previous Week
        </a>
        <a asp-page="Today" class="btn btn-primary">
            <i class="bi bi-calendar-day"></i> Today's Menu
        </a>
        <a asp-page="NextWeek" asp-route-currentWeekStart="@Model.WeekStartDate" class="btn btn-outline-primary">
            Next Week <i class="bi bi-arrow-right"></i>
        </a>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
        </div>
    }

    @if (Model.DailyMenus.Any())
    {
        @foreach (var dailyMenu in Model.DailyMenus)
        {
            <div class="card mb-4">
                <div class="card-header @(dailyMenu.MenuDate.Date == DateTime.Today ? "bg-primary text-white" : "")">
                    <h5 class="mb-0">
                        @dailyMenu.MenuDate.ToString("dddd, MMMM dd, yyyy")
                        @if (dailyMenu.MenuDate.Date == DateTime.Today)
                        {
                            <span class="badge bg-light text-primary">Today</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (dailyMenu.AvailableMeals.Any())
                    {
                        <div class="row">
                            @foreach (var meal in dailyMenu.AvailableMeals)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body">
                                            <h6 class="card-title">@meal.RecipeName</h6>
                                            
                                            @if (meal.Recipe != null)
                                            {
                                                <div class="mb-2">
                                                    <small class="text-muted">
                                                        <strong>@meal.Recipe.TotalCalories.ToString("F0")</strong> kcal | 
                                                        P: @meal.Recipe.ProteinG.ToString("F1")g | 
                                                        F: @meal.Recipe.FatG.ToString("F1")g | 
                                                        C: @meal.Recipe.CarbsG.ToString("F1")g
                                                    </small>
                                                </div>
                                            }

                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h5 class="text-primary mb-0">$@meal.Price.ToString("F2")</h5>
                                                    <small class="text-muted">@meal.AvailableQuantity left</small>
                                                </div>
                                                @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                                                {
                                                    <button class="btn btn-sm btn-secondary" disabled title="Order feature coming in Checkpoint 2">
                                                        Order (Soon)
                                                    </button>
                                                }
                                                @* No order button for Admin, Manager, or DeliveryMan *@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light mb-0">
                            <i class="bi bi-info-circle"></i> No menu available for this day.
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No menus are available for this week.
        </div>
    }

    <div class="text-center mt-4">
        <a asp-page="/Home/Index" class="btn btn-outline-secondary">
            <i class="bi bi-house"></i> Back to Home
        </a>
    </div>
</div>


@section Scripts {
    <script>
        console.log('Initializing SignalR for Weekly menu...');
        
        let menuConnection = null;
        
        function showMenuStatusAlert(title, message, type) {
            console.log('Showing alert:', title, message, type);
            
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3`;
            alertDiv.style.zIndex = '9999';
            alertDiv.style.minWidth = '400px';
            alertDiv.innerHTML = `
                <strong><i class="bi bi-${type === 'warning' ? 'exclamation-triangle' : 'check-circle'}"></i> ${title}:</strong> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            
            document.body.appendChild(alertDiv);
            
            setTimeout(function() {
                alertDiv.remove();
            }, 5000);
        }
        
        function registerMenuHandlers(connection) {
            console.log('Registering event handlers on MenuHub connection');
            
            // Handle menu status changes (activate/deactivate)
            connection.on("ReceiveMenuStatusChange", function (menuId, menuDate, isActive) {
                console.log('=== MENU STATUS CHANGE RECEIVED (Weekly) ===');
                console.log('Menu ID:', menuId);
                console.log('Menu Date:', menuDate);
                console.log('Is Active:', isActive);
                console.log('===================================');
                
                const statusText = isActive ? 'activated' : 'deactivated';
                const alertType = isActive ? 'success' : 'warning';
                
                showMenuStatusAlert('Menu Updated', `A menu has been ${statusText}. The page will refresh to show the latest menus.`, alertType);
                
                setTimeout(function() {
                    console.log('Refreshing page...');
                    window.location.reload();
                }, 2000);
            });
            
            // Handle menu updates (new meals added, quantity changes)
            connection.on("ReceiveMenuUpdate", function (menuDate, mealId, quantityRemaining) {
                console.log('=== MENU UPDATE RECEIVED (Weekly) ===');
                console.log('Menu Date:', menuDate);
                console.log('Meal ID:', mealId);
                console.log('Quantity:', quantityRemaining);
                console.log('============================');
                
                showMenuStatusAlert('Menu Updated', 'New meals have been added to the menu. The page will refresh.', 'info');
                
                setTimeout(function() {
                    console.log('Refreshing page...');
                    window.location.reload();
                }, 2000);
            });
        }
        
        // Create our own connection directly
        function initializeConnection() {
            console.log('Creating SignalR connection to MenuHub...');
            
            menuConnection = new signalR.HubConnectionBuilder()
                .withUrl("/hubs/menu")
                .withAutomaticReconnect()
                .configureLogging(signalR.LogLevel.Information)
                .build();
            
            // Register handlers before starting
            registerMenuHandlers(menuConnection);
            
            // Handle connection events
            menuConnection.onreconnecting(function(error) {
                console.warn('Reconnecting to MenuHub...', error);
            });

            menuConnection.onreconnected(function(connectionId) {
                console.log('Reconnected to MenuHub. Connection ID:', connectionId);
            });

            menuConnection.onclose(function(error) {
                console.error('Disconnected from MenuHub', error);
            });
            
            // Start the connection
            menuConnection.start()
                .then(function() {
                    console.log('✓ Connected to MenuHub for Weekly menu. Connection ID:', menuConnection.connectionId);
                })
                .catch(function(err) {
                    console.error('✗ Failed to connect to MenuHub:', err);
                });
        }
        
        // Initialize when page loads
        initializeConnection();
    </script>
}
