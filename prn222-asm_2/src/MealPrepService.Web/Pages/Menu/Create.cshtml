@page
@model MealPrepService.Web.Pages.Menu.CreateModel
@{
    ViewData["Title"] = "Create Menu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Create Daily Menu</h4>
                </div>
                <div class="card-body">
                    <form asp-page="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="MenuDate" class="form-label">Menu Date</label>
                            <input asp-for="MenuDate" type="date" class="form-control" />
                            <span asp-validation-for="MenuDate" class="text-danger"></span>
                            <small class="form-text text-muted">Select the date for this menu</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> After creating the menu, you'll be able to add meals to it. The menu will be created in <strong>Draft</strong> status.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create Menu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
