@model EditIngredientViewModel
@{
    ViewData["Title"] = "Edit Ingredient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>
                        Edit Ingredient
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="IngredientName" class="form-label"></label>
                            <input asp-for="IngredientName" class="form-control" placeholder="e.g., Chicken Breast, Olive Oil, Tomato" />
                            <span asp-validation-for="IngredientName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Unit" class="form-label"></label>
                                <input asp-for="Unit" class="form-control" placeholder="e.g., g, ml, piece, cup" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Common units: g, kg, ml, L, piece, cup, tbsp, tsp
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CaloPerUnit" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="CaloPerUnit" class="form-control" type="number" step="0.1" min="0" placeholder="0.0" />
                                    <span class="input-group-text">cal</span>
                                </div>
                                <span asp-validation-for="CaloPerUnit" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsAllergen" class="form-check-input" type="checkbox" role="switch" id="isAllergenSwitch" />
                                <label asp-for="IsAllergen" class="form-check-label" for="isAllergenSwitch">
                                    Mark as Allergen
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="bi bi-exclamation-triangle me-1"></i>
                                Check this if the ingredient is a common allergen (e.g., peanuts, dairy, shellfish, eggs)
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-exclamation-triangle-fill text-danger me-1"></i>
                                Associated Allergies
                            </label>
                            <div class="form-text mb-2">
                                Select all allergies that this ingredient may trigger. This helps customers with allergies avoid this ingredient.
                            </div>
                            @if (Model.AvailableAllergies != null && Model.AvailableAllergies.Any())
                            {
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var allergy in Model.AvailableAllergies)
                                            {
                                                <div class="col-md-6 mb-2">
                                                    <div class="form-check">
                                                        <input class="form-check-input" 
                                                               type="checkbox" 
                                                               name="SelectedAllergyIds" 
                                                               value="@allergy.Id" 
                                                               id="allergy_@allergy.Id"
                                                               @(allergy.IsSelected ? "checked" : "") />
                                                        <label class="form-check-label" for="allergy_@allergy.Id">
                                                            @allergy.AllergyName
                                                        </label>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No allergies available. Please create allergies first in the Allergy Management section.
                                </div>
                            }
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Note:</strong> Changing this ingredient will affect all recipes that use it. Make sure the changes are accurate.
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Quick Actions</h6>
                    <div class="d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>
                            View Details
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-1"></i>
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this ingredient?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. Ingredients used in recipes cannot be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>
                        Yes, Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
