@model List<MealPrepService.Web.PresentationLayer.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Orders</h2>
        <a asp-controller="PublicMenu" asp-action="Today" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Place New Order
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Order #@order.Id.ToString().Substring(0, 8)</small>
                                @if (order.Status.Equals("pending", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (order.Status.Equals("pending_payment", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-info">Pending Payment</span>
                                }
                                else if (order.Status.Equals("confirmed", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (order.Status.Equals("delivered", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-primary">Delivered</span>
                                }
                                else if (order.Status.Equals("payment_failed", StringComparison.OrdinalIgnoreCase))
                                {
                                    <span class="badge bg-danger">Payment Failed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy")<br />
                                <strong>Items:</strong> @order.ItemsCount<br />
                                <strong>Payment:</strong> @order.PaymentMethod<br />
                                @if (order.DeliveryTime.HasValue)
                                {
                                    <strong>Delivery:</strong> @order.DeliveryTime.Value.ToString("MMM dd, yyyy hh:mm tt")<br />
                                }
                            </p>
                            <h4 class="text-primary">$@order.TotalAmount.ToString("F2")</h4>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            @if (order.Status.Equals("payment_failed", StringComparison.OrdinalIgnoreCase))
                            {
                                <form asp-action="Retry" asp-route-id="@order.Id" method="post" class="mt-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-warning w-100">
                                        <i class="bi bi-arrow-clockwise"></i> Retry Payment
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3">No Orders Yet</h4>
                <p class="text-muted">You haven't placed any orders yet. Check out today's menu to get started!</p>
                <a asp-controller="PublicMenu" asp-action="Today" class="btn btn-primary mt-3">
                    <i class="bi bi-calendar-day"></i> View Today's Menu
                </a>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
